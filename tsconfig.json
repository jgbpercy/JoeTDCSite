{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "*": ["types/*"],
      "app/*": [
        "src/app/*"
      ],
      "core/*": [
        "src/app/core/*"
      ],
      "shared/*": [
        "src/app/shared/*"
      ],
      "environment": [
        "src/environments/environment"
      ]
    },
    "module": "es2015",
    "strict": true,
    "noImplicitAny": true
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "fullTemplateTypeCheck": true
  }
}
